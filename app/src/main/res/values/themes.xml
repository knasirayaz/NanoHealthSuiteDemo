<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NanoHealthSuiteDemo" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />

    <style name="Widget.MaterialComponents.Button.RoundEdged">
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Bridge</item>

    </style>

    <style name="headings">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="sub_headings">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/medium</item>

    </style>

    <style name="Paragraph">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/regular</item>

    </style>

    <style name="Italic_Paragraph">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/italic</item>

    </style>

    <style name="navTextInactive">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="navTextActive">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="CustomCardViewStyleForTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_top_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>


</resources>
